<p id="notice"><%= notice %></p>

<h1>List of Schedules</h1>

<table class="table">
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Type of class</th>
      <th>Age of student</th>
      <th>Time in</th>
      <th>Time out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.teacher.firstname %></td>
        <td><%= schedule.type_of_class.name %></td>
        <td><%= schedule.age_of_student.age %></td>
        <td><%= schedule.time_in %></td>
        <td><%= schedule.time_out %></td>

        <td><%= link_to 'Show', schedule, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path, class: "btn btn-primary" %>
