<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Cin</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.firstname %></td>
        <td><%= teacher.lastname %></td>
        <td><%= teacher.CIN %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.phone %></td>
        <td><%= link_to 'Show', teacher, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

