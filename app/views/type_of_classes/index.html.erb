<p id="notice"><%= notice %></p>

<h1>Listing Type Of Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_of_classes.each do |type_of_class| %>
      <tr>
        <td><%= type_of_class.name %></td>
        <td><%= link_to 'Show', type_of_class %></td>
        <td><%= link_to 'Edit', edit_type_of_class_path(type_of_class) %></td>
        <td><%= link_to 'Destroy', type_of_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

